<%= form_for @supply_consumption, :html => { :class => "form-horizontal supply_consumption" } do |f| %>

  <% if @supply_consumption.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@supply_consumption.errors.count, "error") %> prohibited this supply_consumption from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @supply_consumption.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :supply_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
     <%= f.collection_select(:supply_id, Supply.all, :id, :name, :class => 'form-control') %>
    </div>
    <%=f.error_span(:supply_id) %>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>
  <div class="form-group">
    <%= f.label :production_run_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
     <%= f.collection_select(:production_run_id, ProductRun.all, :id, :name, :class => 'form-control') %>
    </div>
    <%=f.error_span(:production_run_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                supply_consumptions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
