<%- model_class = SupplyShipment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:rcvd) %>:</strong></dt>
  <dd><%= @supply_shipment.rcvd %></dd>
  <dt><strong><%= model_class.human_attribute_name(:return) %>:</strong></dt>
  <dd><%= @supply_shipment.return %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supply_id) %>:</strong></dt>
  <dd><%= @supply_shipment.supply_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @supply_shipment.supplier_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:ship_date) %>:</strong></dt>
  <dd><%= @supply_shipment.ship_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              supply_shipments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_supply_shipment_path(@supply_shipment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              supply_shipment_path(@supply_shipment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
