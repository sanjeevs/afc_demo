<%- model_class = ProductionRun -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:producer_id) %>:</strong></dt>
  <dd><%= @production_run.producer_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:product_id) %>:</strong></dt>
  <dd><%= @production_run.product_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @production_run.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mfgd_date) %>:</strong></dt>
  <dd><%= @production_run.mfgd_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:expiry_date) %>:</strong></dt>
  <dd><%= @production_run.expiry_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:lot_id) %>:</strong></dt>
  <dd><%= @production_run.lot_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              production_runs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_production_run_path(@production_run), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              production_run_path(@production_run),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
