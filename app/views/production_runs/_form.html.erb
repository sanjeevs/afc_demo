<%= form_for @production_run, :html => { :class => "form-horizontal production_run" } do |f| %>

  <% if @production_run.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@production_run.errors.count, "error") %> prohibited this production_run from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @production_run.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :producer_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:producer_id, Producer.all, :id, :name, :class => 'form-control') %>
    </div>
    <%=f.error_span(:producer_id) %>
  </div>
  <div class="form-group">
    <%= f.label :product_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.collection_select(:product_id, Product.all, :id, :name, :class => 'form-control') %>
    </div>
    <%=f.error_span(:product_id) %>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount) %>
  </div>
  <div class="form-group">
    <%= f.label :mfgd_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :mfgd_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:mfgd_date) %>
  </div>
  <div class="form-group">
    <%= f.label :expiry_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :expiry_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:expiry_date) %>
  </div>
  <div class="form-group">
    <%= f.label :lot_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :lot_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:lot_id) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                production_runs_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
